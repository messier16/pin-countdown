<?xml version="1.0" encoding="utf-8" ?>
<NavigationPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PinCountdown.Views.CustomNavigationPage"  
    xmlns:iOS="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    BarBackgroundColor="{AppThemeBinding Dark={StaticResource BlackColor}, Light={StaticResource WhiteColor}}"
    BarTextColor="{AppThemeBinding Light={StaticResource BlackColor}, Dark={StaticResource WhiteColor}}"
    iOS:NavigationPage.IsNavigationBarTranslucent="True">
</NavigationPage>